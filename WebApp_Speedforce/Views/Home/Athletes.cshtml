@using WebApp_Speedforce.Models
@model AthleteListViewModel
@{
    ViewBag.Title = "Lista de Atletas";
}
<div class="row mt">
    <div class="col-md-12">
        <div class="content-panel">
            <table class="table table-striped table-advance table-hover">
                <h4>Listado de Atletas</h4>

                <thead>
                    <tr>
                        <th><i class="fa fa-user"></i> Usuario</th>
                        <th><i class="fa fa-bookmark"></i> Nombre</th>
                        <th><i class="fa fa-bookmark"></i> Apellido</th>
                        <th><i class="fa fa-map-marker"></i> Ciudad</th>
                        <th><i class="fa fa-info"></i> Tipo Atleta</th>
                        <th><i class="fa fa-angle-down"></i> Acciones</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.AthleteList)
                    {
                        <tr>
                            <td><a>@item.Username</a></td>
                            <td>@item.Name</td>
                            <td>@item.LastName</td>
                            <td>@item.CityName</td>
                            <td>@item.BikerType</td>
                            <td>
                                <button class="btn btn-primary btn-xs"><i class="fa fa-eye"></i></button>
                                <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button>
                                <input type="button" class="btn btn-danger btn-xs" value="D" onclick="location.href='@Url.Action("UnbindAthlete", "Home", new { trainer = Model.Trainer, athlete = item.Username })'" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div><!-- /content-panel -->
    </div><!-- /col-md-12 -->
</div><!-- /row -->
