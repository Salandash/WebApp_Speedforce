@using WebApp_Speedforce.Models
@model AthleteListViewModel
@{
    ViewBag.Title = "Lista de Atletas";
}
<!-- INLINE FORM ELELEMNTS -->
<div class="row mt">
    <div class="col-lg-12">
        <div class="content-panel">
            <h4> Agregar Atleta</h4>
            @using (Html.BeginForm("PairAthlete", "Home", FormMethod.Post, new { @class = "form-inline", role = "form", style = "margin-left:5px" }))
            {
                <div class="form-group">
                    <label class="sr-only" for="exampleInputEmail2">Usuario del Atleta</label>
                    @Html.TextBoxFor(m => m.Athlete, new { @class = "form-control", type = "text", id = "exampleInputEmail2", placeholder = "Usuario del Atleta" })
                    @Html.HiddenFor(m => m.Trainer)
                </div>
                <button type="submit" class="btn btn-success"><i class="fa fa-plus"></i></button>
            }
        </div><!-- /form-panel -->
    </div><!-- /col-lg-12 -->
</div><!-- /row -->
<!-- TABLE ELELEMNTS -->
<div class="row mt">
    <div class="col-md-12">
        <div class="content-panel">
            <table class="table table-striped table-advance table-hover">
                <h4>Listado de Atletas</h4>

                <thead>
                    <tr>
                        <th><i class="fa fa-user"></i> Usuario</th>
                        <th><i class="fa fa-bookmark"></i> Nombre</th>
                        <th><i class="fa fa-bookmark"></i> Apellido</th>
                        <th><i class="fa fa-map-marker"></i> Ciudad</th>
                        <th><i class="fa fa-info"></i> Tipo Atleta</th>
                        <th><i class="fa fa-angle-down"></i> Acciones</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.AthleteList)
                    {
                        <tr>
                            <td><a>@item.Username</a></td>
                            <td>@item.Name</td>
                            <td>@item.LastName</td>
                            <td>@item.CityName</td>
                            <td>@item.BikerType</td>
                            <td>
                                <button class="btn btn-primary btn-xs"><i class="fa fa-eye"></i></button>
                                <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button>
                                <input type="button" class="btn btn-danger btn-xs" value="D" onclick="location.href='@Url.Action("UnbindAthlete", "Home", new { trainer = Model.Trainer, athlete = item.Username })'" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div><!-- /content-panel -->
    </div><!-- /col-md-12 -->
</div><!-- /row -->
